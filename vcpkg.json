{
  "$schema": "https://raw.githubusercontent.com/microsoft/vcpkg-tool/main/docs/vcpkg.schema.json",
  "name": "todds",
  "dependencies": [
    "boost-filesystem",
    "boost-nowide",
    "fmt",
    "hwloc",
    {
      "name": "opencv4",
      "default-features": false
    },
    "tbb"
  ],
  "features": {
    "mimalloc": {
      "description": "Use mimalloc instead of the standard allocator",
      "dependencies": [
        "mimalloc"
      ]
    },
    "profiling": {
      "description": "Tracy profiler support",
      "dependencies": [
        "tracy"
      ]
    },
    "program-location": {
      "description": "Find the location of todds executable during runtime",
      "dependencies": [
        "boost-dll"
      ]
    },
    "regex": {
      "description": "Regular expression parameter support",
      "dependencies": [
        "hyperscan"
      ]
    },
    "tests": {
      "description": "Build tests",
      "dependencies": [
        "catch2"
      ]
    }
  }
}